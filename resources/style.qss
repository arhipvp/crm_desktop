/* üìå –û–±—â–∏–π —Å—Ç–∏–ª—å —Ç–∞–±–ª–∏—Ü */
QHeaderView::section {
    font-weight: bold;
    padding: 4px;
    background-color: #f2f2f2;
    border: 1px solid #ddd;
}

QTableView {
    gridline-color: #ddd;
    alternate-background-color: #fafafa;
    selection-background-color: #d0eaff;
    selection-color: black;
}

/* üìå –ü–æ–¥—Å–≤–µ—Ç–∫–∞ —Å—Ç—Ä–æ–∫–∏ –ø–æ–¥ –∫—É—Ä—Å–æ—Ä–æ–º */
QTableView::item:hover {
    background-color: #edf6ff;
}

/* üìå –û—Ñ–æ—Ä–º–ª–µ–Ω–∏–µ –≥—Ä—É–ø–ø–æ–≤—ã—Ö –±–ª–æ–∫–æ–≤ */
QGroupBox {
    border: 1px solid #ccc;
    border-radius: 6px;
    margin-top: 10px;
    padding: 6px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    top: -7px;
    background: #f0f0f0;
    padding: 0 4px;
}

/* üìå –ü–æ–ª–∑—É–Ω–æ–∫ —Ä–∞–∑–¥–µ–ª–∏—Ç–µ–ª—è */
QSplitter::handle {
    background: #d0d0d0;
    border: 1px solid #ccc;
}

/* –í–∫–ª–∞–¥–∫–∏ */
QTabBar::tab {
    padding: 6px 12px;
}
QTabBar::tab:selected {
    background: #e6e6e6;
}

/* –°—Ç—Ä–æ–∫–∞ —Å–æ—Å—Ç–æ—è–Ω–∏—è */
QStatusBar {
    background: #f2f2f2;
    padding-left: 10px;
}

/* üìå –ö–Ω–æ–ø–∫–∏ */
QPushButton {
    min-height: 28px;
    padding: 4px 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
    background-color: #f5f5f5;
}

QPushButton:hover {
    background-color: #e6e6e6;
}

QPushButton:pressed {
    background-color: #dcdcdc;
}

/* ‚úÖ –û—Å–Ω–æ–≤–Ω—ã–µ –¥–µ–π—Å—Ç–≤–∏—è: –°–æ—Ö—Ä–∞–Ω–∏—Ç—å, –î–æ–±–∞–≤–∏—Ç—å */
QPushButton[role="primary"] {
    background-color: #3ba55d;
    color: white;
    border: none;
}

QPushButton[role="primary"]:hover {
    background-color: #2e874b;
}

/* ‚ùå –û–ø–∞—Å–Ω—ã–µ –¥–µ–π—Å—Ç–≤–∏—è: –£–¥–∞–ª–∏—Ç—å */
QPushButton[role="danger"] {
    background-color: #d9534f;
    color: white;
    border: none;
}

QPushButton[role="danger"]:hover {
    background-color: #c9302c;
}

QTableView::item:hover {
    background-color: #edf6ff;
}
